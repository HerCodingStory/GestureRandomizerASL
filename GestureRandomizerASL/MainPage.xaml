<Page
    x:Class="ASLGestureRandomizer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ASLGestureRandomizer"
    MinWidth="1280" MinHeight="720">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark" >
        <Image x:Name="imgASL" HorizontalAlignment="Left" MaxWidth="1280" MaxHeight="800" VerticalAlignment="Top" />
        <TextBlock x:Name="textBox" HorizontalAlignment="Left" Margin="20,0,0,70" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="765" Height="50" FontSize="24" Foreground="Red"/>
        <Button x:Name="Reset" Content="Reset" HorizontalAlignment="Right" Margin=" 0, 0, 0, 100" VerticalAlignment="Bottom" Height="100" Width="180" Click="Reset_Click"/>
        <Button x:Name="button" Content="Randomize" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="button_Click" Height="100" Width="180" RequestedTheme="Dark" Background="#3300AEFF"/>
    </Grid>
</Page>
